{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": [
    "**/*.{md,lock,json,yaml,yml}",
    "node_modules/*",
    "dist/*",
    "migrations/**/*",
    "coverage/*",
    "*.log"
  ],
  "plugins": [
    "eslint",
    "import",
    "typescript",
    "unicorn",
    "node",
    "oxc",
    "promise"
  ],
  "env": {
    "node": true,
    "es2022": true
  },
  "globals": {},
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "rules": {
    "import/no-cycle": "error"
  },
  "overrides": [
    {
      "files": [
        "*.test.ts",
        "*.spec.ts"
      ],
      "rules": {}
    }
  ]
}